<Page
    x:Class="ex4.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ex4"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>
        <StackPanel>
            <TextBlock FontSize="48">First</TextBlock>
            <TextBlock FontSize="48">Second</TextBlock>
            <TextBlock FontSize="48">Thrid</TextBlock>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Fourth" FontSize="48"/>
                <TextBlock FontSize="36" Height="80" Width="100"/>
                <Button FontSize="48">Sixth</Button>
            </StackPanel>

        </StackPanel>
        <StackPanel>
            <Rectangle Fill="Red" Height="200"/>
        </StackPanel>
    </StackPanel>
</Page>
